@model Blog
@{ ViewBag.Title = Model.Title;}
<div class="mainbar">
    <div class="article">
        <h2><span>@Model.Title</span></h2>
        <div class="clr"></div>
        <p>@Model.Description</p>
        <p>Etiketler: <a href="#">@Model.Tags</a></p>
        <p><a href="#"><strong>Yorumlar (@Model.CommentCount)</strong></a> <span>&nbsp;&bull;&nbsp;</span> @Model.PublishDate.ToString("MMM dd, yyyy") <span>&nbsp;&bull;&nbsp;</span> <a href="#"><strong>Düzenle</strong></a></p>
    </div>
    <div class="article">
        <h2><span>Yanıtlar</span></h2>
        <div class="clr"></div>
        @foreach (var comment in ViewBag.Comments)
        {
            <div class="comment">
                <a href="#"><img src="/images/userpic.gif" width="40" height="40" alt="" class="userpic" /></a>
                <p>
                    <a href="#">@comment.Name</a><br />
                    @comment.PublishDate.ToString("MMMM dd, yyyy hh:mm:tt")
                </p>
                <p>@comment.Message</p>
            </div>
        }
    </div>
    <div class="article">
        <h2><span>Yorum</span> Bırak</h2>
        <div class="clr"></div>
        <form asp-controller="Blog" asp-action="CreateComment" method="post" id="leavereply">
            <ol>
                <input type="hidden" id="BlogId" name="BlogId" value="@Model.BlogId" />
                <li>
                    <label for="name">Adınız (zorunlu)</label>
                    <input id="name" name="name" class="text" required />
                </li>
                <li>
                    <label for="email">Email (zorunlu)</label>
                    <input id="email" name="email" class="text" required />
                </li>
                <li>
                    <label for="message">Mesajınız</label>
                    <textarea id="message" name="message" rows="8" cols="50"></textarea>
                </li>
                <li>
                    <input type="image" name="imageField" id="imageField" src="/images/submit.gif" class="send" value="Gönder" />
                    <div class="clr"></div>
                </li>
            </ol>
        </form>
    </div>
</div>